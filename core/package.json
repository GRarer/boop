{
  "name": "boop-core",
  "version": "0.0.0",
  "description": "shared utilities and types for Boop",
  "main": "dist/index.umd.js",
  "module": "dist/index.es5.js",
  "types": "dist/types/src/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsc --build && npm run rollup",
    "clean": "npx shx --silent rm -rf dist",
    "build-watch": "npm run clean && (trap 'kill 0' SIGINT ; npx tsc --build --watch & npx rollup -c rollup.config.ts --watch)",
    "lint": "npx eslint . --ext .ts",
    "rollup": "npx rollup -c rollup.config.ts"
  },
  "eslintIgnore": [
    "dist/*",
    "rollup.config.ts"
  ],
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.18.0",
    "rollup": "^2.36.2",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.29.0",
    "shx": "^0.3.3",
    "typescript": "^4.1.3"
  }
}
